<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".AppActivity">
    <TextView
            android:text="@string/zagolovok"
            android:layout_width="240dp"
            android:textColor="@color/black"
            android:layout_height="35dp" android:id="@+id/textZagolov"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="24sp"/>
    <TextView
            android:text="@string/PODzagolovok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textPODzagolovok"
            android:textSize="16sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textZagolov" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"/>
    <TextView
            android:text="@string/Algoritm"
            android:textColor="#000000"
            android:gravity="top"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/NameAlgoritm"
            app:layout_constraintStart_toEndOf="@+id/textPODzagolovok" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textZagolov" android:layout_marginStart="2dp"/>
    <TextView
            android:id="@+id/NameEnter"
            android:layout_width="150dp"
            android:layout_height="117dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/NameEnter"
            android:gravity="top"
            android:textSize="38sp"
            android:textColor="@color/black"
            android:layout_marginTop="115dp"
            app:layout_constraintTop_toBottomOf="@+id/textPODzagolovok" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <RelativeLayout
            android:id="@+id/frame_1"
            android:layout_width="361dp"
            android:layout_height="173dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            android:background="@drawable/space_text"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/NameEnter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:hint="@string/print_some_"
                android:ems="10"
                android:id="@+id/editText"/>
    </RelativeLayout>
    <Button
            android:text="@string/btn_cod"
            android:id="@+id/btn_code"
            android:layout_width="287dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            android:background="@drawable/btn_code"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/frame_1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"/>
    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/seconds_btn"
            app:srcCompat="@android:drawable/ic_menu_manage"
            android:id="@+id/btn_settings"
            android:contentDescription="@string/context_settings"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="12dp"/>
    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/seconds_btn"
            app:srcCompat="@android:drawable/ic_menu_help"
            android:id="@+id/btn_help"
            android:contentDescription="@string/context_help"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>